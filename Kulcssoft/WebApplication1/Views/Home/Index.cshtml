@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-6">
        <h3>Register New User</h3>
        <form>
            <input type="text" id="Name" placeholder="User name" name="Name" />
            <input type="text" id="Email" placeholder="User email" name="Email" />
            <input class="button" name="button" id="saveButton" type="button" value="Save" />
        </form>
    </div>
    <div class="col-md-offset-3 col-md-3">
        <h3>Delete User</h3>
        <input type="text" id="delId" placeholder="User Id" name="Id" />
        <input class="button" name="button" id="delButton" type="button" value="Delete" />
    </div>
    <div class="row">
        <table class="table" name="table" id="table">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Delete</th>
            </tr>
        </table>
    </div>
</div>